<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaGestionPersonal.Views.EmployeeHomePage"
             Title="Vista de Empleados">
    <StackLayout Padding="20" VerticalOptions="FillAndExpand">
        <Label Text="Bienvenido, Empleado" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Button Text="Consultar Nómina" 
                Clicked="OnViewPayrollClicked" 
                BackgroundColor="#ADD8E6" 
                TextColor="Black" 
                Margin="0,10,0,0"/>

        <Button Text="Ver Evaluaciones de Desempeño" 
                Clicked="OnViewPerformanceClicked" 
                BackgroundColor="#ADD8E6" 
                TextColor="Black" 
                Margin="0,10,0,20"/>

        <!-- Botón para regresar -->
        <Button Text="Regresar" 
                Clicked="OnBackButtonClicked" 
                BackgroundColor="Black" 
                TextColor="White" 
                Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
