<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaGestionPersonal.Views.CreateUserPage"
             Title="CreateUserPage">
    
    <StackLayout Padding="10">
        <Entry x:Name="UsernameEntry" Placeholder="Nombre de Usuario" />
        <Entry x:Name="PasswordEntry" Placeholder="ContraseÃ±a" IsPassword="True" />
        <Picker x:Name="RolePicker" Title="Selecciona un Rol">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Employee</x:String>
                    <x:String>Admin</x:String>
                    <!-- Puedes incluir esto si deseas -->
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Crear Usuario" Clicked="OnCreateUserButtonClicked" />
    </StackLayout>
</ContentPage>