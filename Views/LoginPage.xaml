<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaGestionPersonal.Views.LoginPage"
             Title="LoginPage">
    
    <StackLayout Padding="10">
        <Entry x:Name="UsernameEntry" Placeholder="Nombre de Usuario" />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />
        <Button Text="Iniciar Sesión" Clicked="OnLoginButtonClicked" />
    </StackLayout>
    
</ContentPage>