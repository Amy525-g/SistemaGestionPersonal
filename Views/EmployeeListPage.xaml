<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaGestionPersonal.Views.EmployeeListPage"
             Title="Vista de Administradores">

    <StackLayout Padding="10">
        <Label Text="Gestión de Empleados" FontSize="Large" HorizontalOptions="Center" />

        <!-- Botón para registrar empleado -->
        <Button Text="Registrar Empleado"
                Clicked="OnCreateUserButtonClicked"
                BackgroundColor="#ADD8E6" 
                TextColor="Black"
                WidthRequest="250" 
                HeightRequest="50"
                Margin="0,10,0,10"
                HorizontalOptions="Center" />

        <!-- Botón para gestionar contratos -->
        <Button Text="Gestionar Contratos"
                Clicked="OnManageContractsButtonClicked"
                BackgroundColor="#ADD8E6" 
                TextColor="Black"
                WidthRequest="250" 
                HeightRequest="50"
                Margin="0,10,0,10"
                HorizontalOptions="Center" />

        <!-- Botón para generar nómina -->
        <Button Text="Generar Nómina"
                Clicked="OnManageNominasPage"
                BackgroundColor="#ADD8E6" 
                TextColor="Black"
                WidthRequest="250" 
                HeightRequest="50"
                Margin="0,10,0,10"
                HorizontalOptions="Center" />

        <!-- Botón para realizar evaluación de desempeño -->
        <Button Text="Realizar Evaluación de Desempeño"
                Clicked="OnPerformanceEvaluationButtonClicked"
                BackgroundColor="#ADD8E6" 
                TextColor="Black"
                WidthRequest="250" 
                HeightRequest="50"
                Margin="0,10,0,10"
                HorizontalOptions="Center" />

        <!-- Botón para generar informes de personal -->
        <Button Text="Generar Informes de Personal"
                Clicked="OnGenerateReportsButtonClicked"
                BackgroundColor="#ADD8E6" 
                TextColor="Black"
                WidthRequest="250" 
                HeightRequest="50"
                Margin="0,10,0,10"
                HorizontalOptions="Center" />

        <!-- Botón para regresar -->
        <Button Text="Regresar"
                Clicked="OnBackButtonClicked"
                BackgroundColor="Black"
                TextColor="White"
                WidthRequest="250" 
                HeightRequest="50"
                Margin="0,20,0,0"
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
