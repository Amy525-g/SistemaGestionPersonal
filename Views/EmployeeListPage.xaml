<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaGestionPersonal.Views.EmployeeListPage"
             Title="Vista de Administradores">
    
    <StackLayout Padding="10">
        <Label Text="Gestion de Empleados" FontSize="Large" HorizontalOptions="Center" />

        <Button Text="Crear Nuevo Usuario"
                Clicked="OnCreateUserButtonClicked"
                BackgroundColor="#ADD8E6" 
                TextColor="Black"
                Margin="0,20,0,10"
                HorizontalOptions="Center" />

        <ListView x:Name="EmployeeListView">
            <!-- Define la plantilla para los elementos de la lista -->
        </ListView>
    </StackLayout>
</ContentPage>